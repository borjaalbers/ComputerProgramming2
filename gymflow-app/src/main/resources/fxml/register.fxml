<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.RegistrationController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-container">
            <children>
                <VBox alignment="CENTER" spacing="15.0" styleClass="login-card">
                    <children>
                        <Label text="Create Account" styleClass="login-title" style="-fx-font-size: 32px;" />
                        <Label text="Join GymFlow today" styleClass="login-subtitle" />
                        <Separator prefWidth="300.0" styleClass="separator" />
                        <TextField fx:id="fullNameField" promptText="Full Name" prefWidth="300.0" styleClass="login-field" />
                        <TextField fx:id="emailField" promptText="Email" prefWidth="300.0" styleClass="login-field" />
                        <TextField fx:id="usernameField" promptText="Username" prefWidth="300.0" styleClass="login-field" />
                        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300.0" styleClass="login-field" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="300.0" styleClass="login-field" />
                        <ComboBox fx:id="roleComboBox" promptText="Select Role" prefWidth="300.0" styleClass="combo-box" />
                        <Button fx:id="registerButton" text="Sign Up" prefWidth="300.0" styleClass="success-button" />
                        <Separator prefWidth="300.0" styleClass="separator" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label text="Already have an account?" styleClass="login-subtitle" />
                            <Button fx:id="backToLoginButton" text="Sign In" styleClass="signup-link" />
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="40" bottom="40" left="40" right="40" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets top="40" bottom="40" left="40" right="40" />
            </padding>
        </VBox>
    </center>
</BorderPane>

