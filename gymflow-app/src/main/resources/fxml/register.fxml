<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.RegistrationController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ecf0f1;">
            <children>
                <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <children>
                        <Label text="Create Account" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <Label text="Join GymFlow today" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                        <Separator prefWidth="300.0" style="-fx-padding: 10 0 10 0;" />
                        <TextField fx:id="fullNameField" promptText="Full Name" prefWidth="300.0" style="-fx-font-size: 14px;" />
                        <TextField fx:id="emailField" promptText="Email" prefWidth="300.0" style="-fx-font-size: 14px;" />
                        <TextField fx:id="usernameField" promptText="Username" prefWidth="300.0" style="-fx-font-size: 14px;" />
                        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300.0" style="-fx-font-size: 14px;" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="300.0" style="-fx-font-size: 14px;" />
                        <ComboBox fx:id="roleComboBox" promptText="Select Role" prefWidth="300.0" style="-fx-font-size: 14px;" />
                        <Button fx:id="registerButton" text="Sign Up" prefWidth="300.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" />
                        <Separator prefWidth="300.0" style="-fx-padding: 10 0 10 0;" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label text="Already have an account?" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                            <Button fx:id="backToLoginButton" text="Sign In" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-font-size: 12px; -fx-font-weight: bold; -fx-underline: true; -fx-border-color: transparent; -fx-background-color: transparent;" />
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="40" bottom="40" left="40" right="40" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets top="40" bottom="40" left="40" right="40" />
            </padding>
        </VBox>
    </center>
</BorderPane>

