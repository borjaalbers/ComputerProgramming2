<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.AdminDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #8e44ad; -fx-padding: 15;">
            <children>
                <Label text="GymFlow - Administrator Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, Administrator" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </children>
        </HBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="User Management">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="System Users" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button text="Add New User" />
                                <Button text="Import Users" />
                                <Button text="Export Users" />
                            </HBox>
                            <TableView fx:id="userTable" prefHeight="400.0">
                                <columns>
                                    <TableColumn text="Username" prefWidth="150.0" />
                                    <TableColumn text="Full Name" prefWidth="200.0" />
                                    <TableColumn text="Email" prefWidth="200.0" />
                                    <TableColumn text="Role" prefWidth="100.0" />
                                    <TableColumn text="Created" prefWidth="150.0" />
                                    <TableColumn text="Actions" prefWidth="200.0" />
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="Equipment Management">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="Gym Equipment" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button text="Add Equipment" onAction="#handleAddEquipment" />
                                <Button text="Service Equipment" />
                            </HBox>
                            <TableView fx:id="equipmentTable" prefHeight="400.0">
                                <columns>
                                    <TableColumn fx:id="equipmentNameColumn" text="Equipment Name" prefWidth="200.0" />
                                    <TableColumn fx:id="equipmentStatusColumn" text="Status" prefWidth="150.0" />
                                    <TableColumn fx:id="equipmentLastServiceColumn" text="Last Service" prefWidth="150.0" />
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="System Reports">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <Label text="System Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <GridPane hgap="20.0" vgap="15.0" style="-fx-padding: 20;">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="200.0" />
                                    <ColumnConstraints minWidth="200.0" />
                                </columnConstraints>
                                <children>
                                    <Label text="Total Members:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Label fx:id="totalMembersLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Total Trainers:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <Label fx:id="totalTrainersLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Active Classes:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <Label fx:id="activeClassesLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Equipment Items:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <Label fx:id="equipmentCountLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                </children>
                            </GridPane>
                            <HBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                                <Button text="Export Attendance Report" onAction="#handleExportAttendanceReport" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="My Profile">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <Label text="Profile Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <GridPane hgap="10.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="150.0" />
                                    <ColumnConstraints minWidth="300.0" />
                                </columnConstraints>
                                <children>
                                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <Label fx:id="fullNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <Label fx:id="roleLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                </children>
                            </GridPane>
                            <HBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                                <Button text="Edit Profile" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

