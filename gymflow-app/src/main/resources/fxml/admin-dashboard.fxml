<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.AdminDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="dashboard-header dashboard-header-admin">
            <children>
                <Label text="GymFlow - Administrator Dashboard" styleClass="dashboard-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, Administrator" styleClass="dashboard-welcome" />
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="logout-button" />
            </children>
        </HBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="User Management">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="System Users" styleClass="section-title" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="addUserButton" text="Add New User" onAction="#handleAddUser" styleClass="primary-button" />
                                <Button fx:id="refreshUsersButton" text="Refresh" onAction="#handleRefreshUsers" styleClass="secondary-button" />
                            </HBox>
                            <TableView fx:id="userTable" prefHeight="500.0" styleClass="table-view">
                                <columns>
                                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150.0" />
                                    <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="200.0" />
                                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200.0" />
                                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="100.0" />
                                    <TableColumn fx:id="createdColumn" text="Created" prefWidth="150.0" />
                                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200.0" />
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="Equipment Management">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="Gym Equipment" styleClass="section-title" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button text="Add Equipment" onAction="#handleAddEquipment" styleClass="primary-button" />
                                <Button text="Service Equipment" styleClass="secondary-button" />
                            </HBox>
                            <TableView fx:id="equipmentTable" prefHeight="400.0" styleClass="table-view">
                                <columns>
                                    <TableColumn fx:id="equipmentNameColumn" text="Equipment Name" prefWidth="200.0" />
                                    <TableColumn fx:id="equipmentStatusColumn" text="Status" prefWidth="150.0" />
                                    <TableColumn fx:id="equipmentLastServiceColumn" text="Last Service" prefWidth="150.0" />
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="System Reports">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <Label text="System Statistics" styleClass="section-title" />
                            <GridPane hgap="20.0" vgap="15.0" style="-fx-padding: 20;">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="200.0" />
                                    <ColumnConstraints minWidth="200.0" />
                                </columnConstraints>
                                <children>
                                    <Label text="Total Members:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label" />
                                    <Label fx:id="totalMembersLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="stat-label" />
                                    
                                    <Label text="Total Trainers:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info-label" />
                                    <Label fx:id="totalTrainersLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="stat-label" />
                                    
                                    <Label text="Active Classes:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="info-label" />
                                    <Label fx:id="activeClassesLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="stat-label" />
                                    
                                    <Label text="Equipment Items:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="info-label" />
                                    <Label fx:id="equipmentCountLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="stat-label" />
                                </children>
                            </GridPane>
                            <HBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                                <Button text="Export Attendance Report" onAction="#handleExportAttendanceReport" styleClass="primary-button" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="My Profile">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <Label text="Profile Information" styleClass="section-title" />
                            <GridPane hgap="10.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="150.0" />
                                    <ColumnConstraints minWidth="300.0" />
                                </columnConstraints>
                                <children>
                                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label" />
                                    <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="info-label" />
                                    
                                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info-label" />
                                    <Label fx:id="fullNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="info-label" />
                                    
                                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="info-label" />
                                    <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="info-label" />
                                    
                                    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="info-label" />
                                    <Label fx:id="roleLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="info-label" />
                                </children>
                            </GridPane>
                            <HBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                                <Button text="Edit Profile" styleClass="primary-button" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

