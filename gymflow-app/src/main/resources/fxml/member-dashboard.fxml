<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.MemberDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="GymFlow - Member Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, Member" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </children>
        </HBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="My Workouts">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <Label text="My Workout Plans" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <TableView fx:id="workoutTable" prefHeight="400.0">
                                <columns>
                                    <TableColumn fx:id="workoutTitleColumn" text="Title" prefWidth="150.0" />
                                    <TableColumn fx:id="workoutSourceColumn" text="Source" prefWidth="150.0" />
                                    <TableColumn fx:id="workoutTypeColumn" text="Type" prefWidth="100.0" />
                                    <TableColumn fx:id="workoutMuscleGroupColumn" text="Muscle Group" prefWidth="100.0" />
                                    <TableColumn fx:id="workoutDifficultyColumn" text="Difficulty" prefWidth="80.0" />
                                    <TableColumn fx:id="workoutDurationColumn" text="Duration" prefWidth="70.0" />
                                    <TableColumn fx:id="workoutSetsRepsColumn" text="Sets x Reps" prefWidth="90.0" />
                                    <TableColumn fx:id="workoutStatusColumn" text="Status" prefWidth="80.0" />
                                    <TableColumn fx:id="workoutCreatedColumn" text="Created" prefWidth="120.0" />
                                </columns>
                            </TableView>
                            <HBox spacing="10.0">
                                <Button fx:id="viewDetailsButton" text="View Details" onAction="#handleViewDetails" />
                                <Button fx:id="markCompletedButton" text="Mark as Completed" onAction="#handleMarkCompleted" />
                                <Button fx:id="deleteWorkoutButton" text="Delete" onAction="#handleDeleteWorkout" 
                                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="Class Schedule">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <Label text="Upcoming Classes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <VBox spacing="10.0">
                                <TableView fx:id="classTable" prefHeight="400.0">
                                    <columns>
                                        <TableColumn fx:id="classNameColumn" text="Class Name" prefWidth="180.0" />
                                        <TableColumn fx:id="classTrainerColumn" text="Trainer" prefWidth="120.0" />
                                        <TableColumn fx:id="classDateTimeColumn" text="Date &amp; Time" prefWidth="150.0" />
                                        <TableColumn fx:id="classCapacityColumn" text="Capacity" prefWidth="80.0" />
                                        <TableColumn fx:id="classRegisteredColumn" text="Registered" prefWidth="90.0" />
                                        <TableColumn fx:id="classWorkoutPlanColumn" text="Workout Plan" prefWidth="150.0" />
                                    </columns>
                                </TableView>
                                <Label text="ðŸ’¡ Tip: Click a row to select it, then click Register. Double-click a row to register quickly." 
                                       style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-padding: 5;" />
                                <HBox spacing="10.0">
                                    <Button fx:id="registerButton" text="Register for Class" onAction="#handleRegisterForClass" 
                                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" />
                                    <Button fx:id="unregisterButton" text="Unregister from Class" onAction="#handleUnregisterFromClass" 
                                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                                </HBox>
                            </VBox>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="Attendance History">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="My Attendance History" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="refreshAttendanceButton" text="Refresh" onAction="#handleRefreshAttendance" 
                                        style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                            </HBox>
                            <TableView fx:id="attendanceTable" prefHeight="400.0">
                                <columns>
                                    <TableColumn fx:id="attendanceClassNameColumn" text="Class Name" prefWidth="200.0" />
                                    <TableColumn fx:id="attendanceDateTimeColumn" text="Date &amp; Time" prefWidth="180.0" />
                                    <TableColumn fx:id="attendanceTrainerColumn" text="Trainer" prefWidth="150.0" />
                                    <TableColumn fx:id="attendanceStatusColumn" text="Attended" prefWidth="100.0" />
                                </columns>
                            </TableView>
                            <Label text="ðŸ’¡ This shows your complete attendance history for all classes you've registered for." 
                                   style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-padding: 5;" />
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="My Profile">
                    <VBox spacing="15.0" style="-fx-padding: 20;">
                        <children>
                            <Label text="Profile Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <GridPane hgap="10.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="150.0" />
                                    <ColumnConstraints minWidth="300.0" />
                                </columnConstraints>
                                <children>
                                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <Label fx:id="fullNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <Label fx:id="roleLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                </children>
                            </GridPane>
                            <HBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                                <Button text="Edit Profile" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

