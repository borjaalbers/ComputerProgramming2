<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.TrainerDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="dashboard-header dashboard-header-trainer">
            <children>
                <Label text="GymFlow - Trainer Dashboard" styleClass="dashboard-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, Trainer" styleClass="dashboard-welcome" />
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="logout-button" />
            </children>
        </HBox>
    </top>
    
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="My Classes">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="My Class Sessions" styleClass="section-title" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button text="Create New Class" onAction="#handleCreateClass" styleClass="primary-button" />
                            </HBox>
                            <TableView fx:id="classTable" prefHeight="400.0" styleClass="table-view">
                                <columns>
                                    <TableColumn fx:id="classNameColumn" text="Class Name" prefWidth="200.0" />
                                    <TableColumn fx:id="classDateTimeColumn" text="Date &amp; Time" prefWidth="200.0" />
                                    <TableColumn fx:id="classCapacityColumn" text="Capacity" prefWidth="100.0" />
                                    <TableColumn fx:id="classRegisteredColumn" text="Registered" prefWidth="100.0" />
                                    <TableColumn fx:id="classWorkoutPlanColumn" text="Workout Plan" prefWidth="150.0" />
                                </columns>
                            </TableView>
                            <HBox spacing="10.0">
                                <Button text="Edit Class" onAction="#handleEditClass" styleClass="primary-button" />
                                <Button text="Assign Workout Plan" onAction="#handleAssignWorkoutPlan" styleClass="success-button" />
                                <Button text="Delete Class" onAction="#handleDeleteClass" styleClass="danger-button" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="Workout Plans">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label text="Workout Plans I Manage" styleClass="section-title" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button text="Export" onAction="#handleExportWorkoutPlans" styleClass="secondary-button" />
                                <Button text="Import" onAction="#handleImportWorkoutPlans" styleClass="secondary-button" />
                                <Button text="Create Workout Plan" onAction="#handleCreateWorkoutPlan" styleClass="primary-button" />
                            </HBox>
                            <TableView fx:id="workoutTable" prefHeight="400.0" styleClass="table-view">
                                <columns>
                                    <TableColumn fx:id="workoutTitleColumn" text="Title" prefWidth="200.0" />
                                    <TableColumn fx:id="workoutMemberColumn" text="Member" prefWidth="150.0" />
                                    <TableColumn fx:id="workoutDifficultyColumn" text="Difficulty" prefWidth="100.0" />
                                    <TableColumn fx:id="workoutCreatedColumn" text="Created" prefWidth="150.0" />
                                </columns>
                            </TableView>
                        </children>
                    </VBox>
                </Tab>
                
                <Tab text="My Profile">
                    <VBox spacing="15.0" styleClass="content-container">
                        <children>
                            <Label text="Profile Information" styleClass="section-title" />
                            <GridPane hgap="10.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="150.0" />
                                    <ColumnConstraints minWidth="300.0" />
                                </columnConstraints>
                                <children>
                                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label" />
                                    <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="info-label" />
                                    
                                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info-label" />
                                    <Label fx:id="fullNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="info-label" />
                                    
                                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="info-label" />
                                    <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="info-label" />
                                    
                                    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="info-label" />
                                    <Label fx:id="roleLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="info-label" />
                                    
                                    <Label text="Specialization:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="info-label" />
                                    <Label fx:id="specializationLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="info-label" />
                                </children>
                            </GridPane>
                            <HBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                                <Button text="Edit Profile" styleClass="primary-button" />
                            </HBox>
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

