<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymflow.controller.WorkoutPlanFormController">
    <headerText>Create New Workout Plan</headerText>
    <content>
        <GridPane hgap="15.0" vgap="15.0" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints minWidth="300.0" prefWidth="350.0" hgrow="ALWAYS" />
            </columnConstraints>
            
            <!-- Member Selection -->
            <Label text="Member:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="memberComboBox" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Title -->
            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Description -->
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
            <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <!-- Difficulty -->
            <Label text="Difficulty:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="difficultyComboBox" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <!-- Workout Type -->
            <Label text="Workout Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="workoutTypeComboBox" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
            <!-- Muscle Group -->
            <Label text="Muscle Group:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="muscleGroupComboBox" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            
            <!-- Duration -->
            <Label text="Duration (minutes):" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-weight: bold;" />
            <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            
            <!-- Equipment Needed -->
            <Label text="Equipment Needed:" GridPane.columnIndex="0" GridPane.rowIndex="7" style="-fx-font-weight: bold;" />
            <TextField fx:id="equipmentField" GridPane.columnIndex="1" GridPane.rowIndex="7" promptText="e.g., Dumbbells, Barbell, Resistance Bands" />
            
            <!-- Sets and Reps Row -->
            <Label text="Target Sets:" GridPane.columnIndex="0" GridPane.rowIndex="8" style="-fx-font-weight: bold;" />
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
                <TextField fx:id="setsField" prefWidth="100.0" />
                <Label text="Target Reps:" style="-fx-font-weight: bold;" />
                <TextField fx:id="repsField" prefWidth="100.0" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
            
            <!-- Rest Time -->
            <Label text="Rest Time (seconds):" GridPane.columnIndex="0" GridPane.rowIndex="9" style="-fx-font-weight: bold;" />
            <TextField fx:id="restField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
        </GridPane>
    </content>
</DialogPane>

